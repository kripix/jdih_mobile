<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/jdihn_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/jdihn_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fab_Bottom_app_bar"
        tools:targetApi="31">
        <activity
            android:name=".MainActivityAdm"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".AddNewsActivity"
            android:exported="false" />
        <activity
            android:name=".AddDocsActivity"
            android:exported="false" />
        <activity
            android:name=".DetailNewsActivity"
            android:exported="false" />
        <activity
            android:name=".DetailDocsActivity"
            android:exported="false" />
        <activity
            android:name=".NewsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>