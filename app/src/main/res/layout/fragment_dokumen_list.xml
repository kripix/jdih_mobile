<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/docs_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.dokumen.DocsFragment"
    android:background="@color/purple">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produk Hukum"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="@drawable/rounded_background_grey"
        android:elevation="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <SearchView
                android:id="@+id/searchDocs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_background_white"
                android:queryHint="Search"
                android:radius="16dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/filterDocs"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_filter_list_24" />
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_background_white"
            android:elevation="4dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingHorizontal="8dp"
                android:background="@drawable/rounded_background_white">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Peraturan"
                    android:gravity="center_vertical"
                    android:backgroundTint="@color/gray"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Putusan"
                    android:gravity="center_vertical"
                    android:backgroundTint="@color/gray"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:backgroundTint="@color/gray"
                    android:gravity="center_vertical"
                    android:text="Monografi" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Artikel"
                    android:gravity="center_vertical"
                    android:backgroundTint="@color/gray"/>
            </LinearLayout>


        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background=""
            android:elevation="4dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDocs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_dokumen" />
        </FrameLayout>


    </LinearLayout>
</FrameLayout>